<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="333.0" prefWidth="612.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.LogIn">
   <top>
      <AnchorPane prefHeight="74.0" prefWidth="612.0" style="-fx-background-color: #171717;" BorderPane.alignment="CENTER">
         <children>
            <Label layoutX="14.0" layoutY="18.0" prefHeight="39.0" prefWidth="206.0" text="DAT's Dictionary" textFill="#dcff05">
               <font>
                  <Font name="Arial Black" size="20.0" />
               </font>
            </Label>
         </children></AnchorPane>
   </top>
   <center>
      <AnchorPane prefHeight="260.0" prefWidth="612.0" BorderPane.alignment="CENTER">
         <PasswordField fx:id="password" layoutX="130.0" layoutY="102.0" prefHeight="35.0" prefWidth="187.0" promptText="Password">
            <font>
               <Font size="16.0" />
            </font></PasswordField>
         <Button fx:id="button" layoutX="103.0" layoutY="179.0" mnemonicParsing="false" onAction="#userLogin" prefHeight="30.0" prefWidth="115.0" text="Login" textFill="#552bb9">
            <font>
               <Font name="System Bold" size="15.0" />
            </font>
         </Button>
         <Label fx:id="wrongLogIn" layoutX="339.0" layoutY="79.0" prefHeight="30.0" prefWidth="252.0">
            <font>
               <Font name="System Italic" size="18.0" />
            </font></Label>
         <Button fx:id="exit" layoutX="271.0" layoutY="178.0" mnemonicParsing="false" onAction="#userExit" prefHeight="65.0" prefWidth="172.0" text="EXIT">
            <font>
               <Font name="System Bold" size="29.0" />
            </font>
         </Button>
         <Label layoutX="22.0" layoutY="46.0" prefHeight="26.0" prefWidth="99.0" text="USERNAME" textFill="#c70707">
            <font>
               <Font name="System Bold" size="16.0" />
            </font>
         </Label>
         <Label layoutX="22.0" layoutY="107.0" text="PASSWORD" textFill="#c70707">
            <font>
               <Font name="System Bold" size="16.0" />
            </font>
         </Label>
         <TextField fx:id="username" layoutX="130.0" layoutY="42.0" prefHeight="35.0" prefWidth="187.0" promptText="Username">
            <font>
               <Font size="16.0" />
            </font></TextField>
      </AnchorPane>
   </center>
</BorderPane>
