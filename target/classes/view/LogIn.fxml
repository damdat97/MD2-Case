<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.LogIn">
   <left>
      <AnchorPane prefHeight="400.0" prefWidth="243.0" style="-fx-background-color: #171717;" BorderPane.alignment="CENTER">
         <children>
            <TextField layoutY="40.0" prefHeight="92.0" prefWidth="233.0" text="Welcome to my Dictionary">
               <font>
                  <Font name="System Bold" size="17.0" />
               </font>
            </TextField>
         </children>
      </AnchorPane>
   </left>
   <center>
      <AnchorPane prefHeight="400.0" prefWidth="370.0" BorderPane.alignment="CENTER">
         <Label layoutX="14.0" layoutY="132.0" prefHeight="26.0" prefWidth="99.0" text="USERNAME" textFill="#c70707">
            <font>
               <Font name="System Bold" size="16.0" />
            </font>
         </Label>
         <Label layoutX="14.0" layoutY="191.0" text="PASSWORD" textFill="#c70707">
            <font>
               <Font name="System Bold" size="16.0" />
            </font>
         </Label>
         <TextField fx:id="username" layoutX="131.0" layoutY="132.0" promptText="Username" />
         <PasswordField fx:id="password" layoutX="131.0" layoutY="191.0" promptText="Password" />
         <Button fx:id="button" layoutX="131.0" layoutY="282.0" mnemonicParsing="false" onAction="#userLogin" prefHeight="26.0" prefWidth="87.0" text="Login" textFill="#181809">
            <font>
               <Font name="System Bold" size="15.0" />
            </font>
         </Button>
         <Label fx:id="wrongLogIn" layoutX="113.0" layoutY="332.0" prefHeight="21.0" prefWidth="133.0">
            <font>
               <Font name="System Italic" size="14.0" />
            </font></Label>
      </AnchorPane>
   </center>
</BorderPane>
